<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
        default-init-method="init" default-destroy-method="destroy">

    <bean id="vehicle" class="org.edu.miu.cs.cs544.exercise.exercise_5.Car" init-method="init" destroy-method="destroy">
        <constructor-arg type="int" value="2020"/>
        <constructor-arg type="String" value="Toyota"/>
        <constructor-arg type="String" value="Prius"/>
        <constructor-arg type="int" value="55000"/>
    </bean>
</beans>